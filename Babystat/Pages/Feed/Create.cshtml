@page
@model CreateModel
@{
}

<h2>New Feed</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Model.When"></label>
                <input asp-for="Model.When" class="form-control" />
                <span asp-validation-for="Model.When" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model.Amount"></label>
                <input asp-for="Model.Amount" class="form-control" />
                <span asp-validation-for="Model.Amount" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-default" asp-page="./index">Cancel</a>
        </form>
    </div>
</div>